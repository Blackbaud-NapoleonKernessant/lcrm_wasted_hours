<table class="table table-striped table-bordered table-hover" id="customers">
  <thead>
      <%  @table_header.each do |key, value| %>
          <th><%= "#{value}" %></th>
      <% end %>
  </thead>
  <tbody>
      <%  @table_body.each do |lost_productivity| %>
          <tr>
            <td><%= lost_productivity.creation_date.to_s %></td>
            <td><%= lost_productivity.problem_category %></td>
            <td><%= lost_productivity.total_employees_affected %></td>
            <td><%= lost_productivity.hours_lost_per_employee %></td>
            <td><%= lost_productivity.description %></td>
            <td><%= lost_productivity.total_hours_lost_employees %></td>
          </tr>
      <% end %>
  </tbody>
</table>



<script>
    dataTableFunction();
</script>
